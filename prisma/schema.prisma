generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  DELIVERYMAN
  ADMIN
}

model User {
  id        String   @id @default(uuid())
  cpf       String   @unique
  name      String?
  password  String
  email     String?  @unique
  role      Role     @default(DELIVERYMAN)
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@map("users")
}
